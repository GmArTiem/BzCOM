<Page x:Class="BzCOMWpf.ListConversation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BzCOMWpf"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="340"
      Title="ListConversation">

    <Grid  Background="#282828">
        <Button x:Name="Button_Create" Background="#41AECF" Content="Stwórz konwersację" Foreground="Black" Click="Button_Create_Click" Margin="70,320,70,0" FontFamily="Tahoma" FontSize="15"  BorderThickness="0"/>
        <ListView  x:Name="ListViewConversations" Height="320" Margin="0,0,0,0" VerticalAlignment="Top" Width="340" Background="#282828" BorderThickness="0" MouseDoubleClick="ListViewAddressBook_DoubleClick" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn  DisplayMemberBinding="{Binding UsersNames}"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
