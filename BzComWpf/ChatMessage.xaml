<Window x:Class="BzCOMWpf.ChatMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BzCOMWpf"
        xmlns:wf1="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="ChatMessage" Height="440" Width="600" Closing="Window_Closing" Background="#FF222222">
    <Border>
        <DockPanel Background="Aqua">
            <ListView x:Name="ConnectionsListView" Width="150" MouseDoubleClick="ConnectionsListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding UserName}"/>
                        <GridViewColumn Header="Numer" DisplayMemberBinding="{Binding UserNumber}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Frame x:Name="_mainFrame" Width="450"/>
         </DockPanel>
    </Border>
</Window>
