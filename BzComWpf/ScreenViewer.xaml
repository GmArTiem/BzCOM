<Window x:Class="BzCOMWpf.ScreenViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BzCOMWpf"
      xmlns:controls="clr-namespace:AxRDPCOMAPILib;assembly=AxInterop.RDPCOMAPILib"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ScreenViewer">

    <Grid  Background="#282828" Margin="0,0,0,0">
        <DockPanel VerticalAlignment="Top" Height="42" Background="#202020"  >
            <StackPanel Margin="0,0,0,10" >
                <TextBlock FontSize="20" Margin="5" Height="30" Foreground="White" Text="Udostępnianie Ekranu" TextAlignment="Center" VerticalAlignment="Top">

                </TextBlock>

            </StackPanel>
        </DockPanel>
        <DockPanel VerticalAlignment="Bottom" Height="1080" Width="1920">
            <WindowsFormsHost>
                <controls:AxRDPViewer x:Name="RdpViewer"/>
            </WindowsFormsHost>
        </DockPanel>
    </Grid>
</Window>
