<Window x:Class="BzCOMWpf.AddressBookForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BzCOMWpf"
        mc:Ignorable="d"
        Title="AddressBookForm" Height="574.809" Width="406.261" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="ListViewAddressBook" HorizontalAlignment="Left" Height="339" Margin="10,76,0,0" VerticalAlignment="Top" Width="339" Grid.ColumnSpan="4" MouseDoubleClick="ListViewAddressBook_DoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding UserState}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding UserName}"/>
                    <GridViewColumn Header="Desc" DisplayMemberBinding="{Binding UserDesc}"/>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem }">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding UserState}" Value="BRB">
                            <Setter Property="Background" Value="Yellow"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding UserState}" Value="UNAVAILABLE">
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding UserState}"  Value="AVAILABLE">
                            <Setter Property="Background" Value="Green"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding UserState}" Value="BUSY">
                            <Setter Property="Background" Value="Blue"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding UserState}" Value="UNKNOWN">
                            <Setter Property="Background" Value="Black"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <ComboBox x:Name="ComboBoxStatus" HorizontalAlignment="Left" Margin="31.902,38,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBoxStatus_SelectionChanged" Loaded="ComboBoxStatus_Loaded" Grid.Column="1"/>
        <TextBox x:Name="TextBoxDescription" HorizontalAlignment="Left" Height="23" Margin="31.902,15,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" KeyDown="TextBoxDescription_KeyDown" Grid.Column="1"/>
        <Button x:Name="MessageBoxButtons" Content="Button" HorizontalAlignment="Left" Margin="54.902,476,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="MessageBoxButtons_Click"/>

    </Grid>
</Window>
